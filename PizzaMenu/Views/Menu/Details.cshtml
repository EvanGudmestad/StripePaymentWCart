@model MenuItem
@{
    ViewBag.Title = $"{Model.Name} Details";
}

<div class="d-flex justify-content-between">
    <div class="col-md-5 rounded-2 border ">
        <img src="@Model.ImageURL" width="100%" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p class="fs-3">@Model.Price.ToString("C2")</p>
        <h3>Ingredients</h3>
        <p class="fs-5">
            @String.Join(", ", Model.ItemIngredients.Select(i => $"{i.Ingredient.Name}"))
        </p>
        <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
            <select name="numItems" class="form-control">
                @for(int i = 1; i <= 10; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>

            <input value="@Model.Id" name="id" hidden/>
            <button class="btn btn-success" type="submit">Add to Cart</button>
        </form>
    </div>
</div>


